.row.header-block

  a.header-block-logo.pull-left.navbar-collapse.collapse(href="/")
    img(src="../../images/logo-orange.png", alt="Orange Holiday Villas logo").logo-img

  .row.header-block-contacts.pull-right

    #contacts-header
      .row.block-contacts__details Office: +357 26 102728
      .row.block-contacts__details Mob: +357 99 828 886
      .row.block-contacts__details Skype: prolat.natalia

    button(type="button").btn.btn-success#message Отправить</br>сообщение

    //form(role="search")#object-find
      .form-group.pull-left
        input(type="text", placeholder="№ объекта").form-control#object-find_input
      button(type="submit").btn.btn-info.pull-left#object-find_button Найти

nav(data-spy="affix",
data-offset-top="200").navbar.navbar-default

  div(data-ng-controller='HeaderCtrl as hc').container

    button(data-target=".navbar-responsive-collapse", data-toggle="collapse", type="button").navbar-toggle
      span.icon-bar
      span.icon-bar
      span.icon-bar

    a(href="/").navbar-brand
      img(src="../../images/logo-orange.png", alt="Orange Holiday Villas logo", height="50px")

    .navbar-collapse.collapse.navbar-responsive-collapse

      ul.nav.navbar-nav
        li(data-ng-repeat='elem in hc.navMeny')
          a(data-ui-sref="{{elem.href}}",
            data-ui-sref-active="menu-active",
            translate='{{elem.text}}')

        li.dropdown
          button(data-toggle="dropdown").dropdown-toggle.btn.btn-danger.btn-margin-header
            | {{'NAV_REQ_BUTTON' | translate}}&nbsp;
            strong.caret

          -
            var dropdown_menu = [
            {href: '#dailyRequest',       text: 'NAV_REQ_DAILY'},
            {href: '#longtermRequest',    text: 'NAV_REQ_LONG_TERM'},
            {href: '',      text: 'NAV_REQ_LET_PROP'},
            {href: '',      text: 'NAV_REQ_BUY_PROP'},
            {href: '',      text: 'NAV_REQ_SELL_PROP'}
            ]

          ul.dropdown-menu
            li(data-ng-repeat='elem in hc.dropdownMenu')
              button(data-ng-click='hc.activateModal(elem.action)',
                translate='{{elem.text}}').btn.btn-link

          .modal.fade#dailyRequest
            .modal-dialog
              .modal-content
                .panel.panel-info
                  .panel-heading
                    button(data-dismiss="modal").close &times;
                    h4.modal-title.text-center Снять недвижимость: Посуточно
                  .panel-body
                    h4.text-center Заполните форму
                    form.form-horizontal
                      -
                        var longTerm = [
                        {label: 'Имя:', id: 'inputNameDaily', type: 'text', placeholder: 'Ваше имя'},
                        {label: 'Телефон:', id: 'inputPhoneDaily', type: 'phone', placeholder: 'Телефон для связи'},
                        {label: 'Email:', id: 'inputEmailDaily', type: 'email', placeholder: 'Ваш email'},
                        {label: 'Цена:', id: 'inputPriceDaily', type: 'text', placeholder: 'Интересующая вас цена'},
                        {label: 'Город:', id: 'inputCityDaily', type: 'text', placeholder: 'Какой город вас интересует'}
                        ]
                      each elem in longTerm
                        .form-group.clearfix
                          label(for="#{elem.id}").col-sm-3.control-label.text-right #{elem.label}
                          .col-sm-7
                            input(type="#{elem.type}", id="#{elem.id}" placeholder="#{elem.placeholder}").form-control
                      .form-group.clearfix
                        .col-lg-9.col-lg-offset-3.col-md-offset-3.col-sm-offset-3
                          button.btn.btn-success.btn-lg.btn-margin Отправить
                          button.btn.btn-warning.btn-lg.btn-margin Очистить

          .modal.fade#longtermRequest
            .modal-dialog
              .modal-content
                .panel.panel-info
                  .panel-heading
                    button(data-dismiss="modal").close &times;
                    h4.modal-title.text-center Снять недвижимость: Долгосрочно
                  .panel-body
                    h4.text-center Заполните форму
                    form.form-horizontal
                      -
                        var longTerm = [
                        {label: 'Имя:', id: 'inputNameLongterm', type: 'text', placeholder: 'Ваше имя'},
                        {label: 'Телефон:', id: 'inputPhoneLongterm', type: 'phone', placeholder: 'Телефон для связи'},
                        {label: 'Email:', id: 'inputEmailLongterm', type: 'email', placeholder: 'Ваш email'},
                        {label: 'Цена:', id: 'inputPriceLongterm', type: 'text', placeholder: 'Интересующая вас цена'},
                        {label: 'Город:', id: 'inputCityLongterm', type: 'text', placeholder: 'Какой город вас интересует'}
                        ]
                      each elem in longTerm
                        .form-group.clearfix
                          label(for="#{elem.id}").col-sm-3.control-label.text-right #{elem.label}
                          .col-sm-7
                            input(type="#{elem.type}", id="#{elem.id}" placeholder="#{elem.placeholder}").form-control
                      .form-group.clearfix
                        .col-lg-9.col-lg-offset-3.col-md-offset-3.col-sm-offset-3
                          button(type="submit").btn.btn-success.btn-lg.btn-margin Отправить
                          button(type="cancel").btn.btn-warning.btn-lg.btn-margin Очистить


        li(data-ng-controller='translateCtrl as t').dropdown
          div(data-toggle="dropdown").dropdown-toggle.flag-icon-toggle
            img(ng-src='{{t.getLangIcon();}}')

          ul.dropdown-menu
            li
              button(data-ng-click='t.changeLanguage("en");').btn.btn-link.flag-icon
                img(src='../../images/flag_icon_en.png')
                | &nbsp;&nbsp;&nbsp;English
            li(data-ng-controller='translateCtrl as t')
              button(data-ng-click='t.changeLanguage("ru");').btn.btn-link.flag-icon
                img(src='../../images/flag_icon_ru.png')
                | &nbsp;&nbsp;&nbsp;Русский

