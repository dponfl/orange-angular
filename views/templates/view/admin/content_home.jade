#short
  .row#shortCallout
    .cal-12
      .well
        .page-header.page-primary
          h1 {{'CONTENT_HOME_PAGE_HEADER_TITLE' | translate}}

        div(data-ng-controller='ContentHomeAdminTblCtrl').page-body#block-long

          //=================
          // Home content edit
          //=================

          div(data-ng-controller='ContentHomeAdminCtrl as ctrl')
            form(novalidate='novalidate',
            data-ng-submit='ctrl.update()').form-horisontal

              fieldset


                // Carousel img upload

                div(nv-file-drop="",
                uploader="ctrl.uploader",
                ).form-group.clearfix
                  .row
                    .col-md-3
                      h4(translate="LBL_IMG_CAROUSEL_LABEL_01")
                      input(type="file",
                      nv-file-select="",
                      uploader="ctrl.uploader",
                      multiple,
                      data-ng-disabled="ctrl.uploader.queue.length >= 3"
                      )

                    .col-md-9.file-upload-block
                      h4(translate="LBL_IMG_CAROUSEL_LABEL_02")
                      p {{"LBL_IMG_CAROUSEL_LABEL_04" | translate}} {{ctrl.uploader.queue.length}}

                      table.table
                        thead
                          tr
                            th(width="50%", translate="LBL_IMG_TBL_LABEL_NAME")
                            th(data-ng-show="ctrl.uploader.isHTML5",
                            translate="LBL_IMG_TBL_LABEL_SIZE")
                            th(data-ng-show="ctrl.uploader.isHTML5",
                            translate="LBL_IMG_TBL_LABEL_PROGRESS")
                            th(translate="LBL_IMG_TBL_LABEL_STATUS")
                            th(translate="LBL_IMG_TBL_LABEL_ACTION")
                        tbody
                          tr(data-ng-repeat="item in ctrl.uploader.queue")
                            td
                              strong {{ item.file.name }}
                              div(ng-show="ctrl.uploader.isHTML5",
                              ng-thumb="{ file: item._file, height: 100 }")
                            td(data-ng-show="ctrl.uploader.isHTML5" nowrap) {{ item.file.size/1024/1024|number:2 }} MB
                            td(data-ng-show="ctrl.uploader.isHTML5")
                              .progress
                                div(role="progressbar",
                                data-ng-style="{ 'width': item.progress + '%' }").progress-bar
                            td.text-center
                              span(data-ng-show="item.isSuccess")
                                i.glyphicon.glyphicon-ok
                              span(data-ng-show="item.isCancel")
                                i.glyphicon.glyphicon-ban-circle
                              span(data-ng-show="item.isError")
                                i.glyphicon.glyphicon-remove
                            td(nowrap)
                              button(type="button",
                              data-ng-click="item.remove()",
                              data-ng-disabled="!ctrl.uploader.getNotUploadedItems().length"
                              ).btn.btn-danger.btn-xs
                                span.glyphicon.glyphicon-trash
                                span.lbl-margin-left {{"LBL_IMG_MAIN_BTN_REMOVE" | translate}}

                      div
                        div {{"LBL_IMG_CAROUSEL_LABEL_03" | translate}}
                          .progress.queue-progress
                            div(role="progressbar",
                            data-ng-style="{ 'width': ctrl.uploader.progress + '%' }"
                            ).progress-bar

                        button(type="button",
                        data-ng-click="ctrl.uploader.clearQueue()",
                        data-ng-disabled="!ctrl.uploader.queue.length"
                        ).btn.btn-danger.btn-s
                          span.glyphicon.glyphicon-trash
                          span.lbl-margin-left {{"LBL_CAROUSEL_MAIN_BTN_REMOVE_ALL" | translate}}

              .row
                  div(bs-active-pane="ctrl.activeTab", bs-tabs).edit-lang-container

                    div(data-ng-repeat="lang in ctrl.langSet",
                    data-title="{{lang.activeTabTitle}}",
                    name="{{lang.activeTab}}",
                    bs-pane
                    )

                      .form-group.clearfix.top-element
                        label(for='slide_01_title', translate='LBL_SLIDE_01_TITLE').col-sm-2.control-label.text-right
                        .col-sm-9
                          input(type="text",
                          placeholder="{{'OBJ_SLIDE_01_TITLE_PLACEHOLDER' | translate}}",
                          data-ng-model='ctrl.formData.langContent[lang.lang][0].slide_01_title'
                          ).form-control#slide_01_title

                      .form-group.clearfix
                        label(for='slide_01_text', translate='LBL_SLIDE_01_TEXT').col-sm-2.control-label.text-right
                        .col-sm-9
                          textarea(type="text",
                          placeholder="{{'OBJ_SLIDE_01_TEXT_PLACEHOLDER' | translate}}",
                          data-ng-model='ctrl.formData.langContent[lang.lang][0].slide_01_text'
                          ).form-control#slide_01_text

                      .form-group.clearfix
                        label(for='slide_02_title', translate='LBL_SLIDE_02_TITLE').col-sm-2.control-label.text-right
                        .col-sm-9
                          input(type="text",
                          placeholder="{{'OBJ_SLIDE_02_TITLE_PLACEHOLDER' | translate}}",
                          data-ng-model='ctrl.formData.langContent[lang.lang][0].slide_02_title'
                          ).form-control#slide_02_title

                      .form-group.clearfix
                        label(for='slide_02_text', translate='LBL_SLIDE_02_TEXT').col-sm-2.control-label.text-right
                        .col-sm-9
                          textarea(type="text",
                          placeholder="{{'OBJ_SLIDE_02_TEXT_PLACEHOLDER' | translate}}",
                          data-ng-model='ctrl.formData.langContent[lang.lang][0].slide_02_text'
                          ).form-control#slide_02_text

                      .form-group.clearfix
                        label(for='slide_03_title', translate='LBL_SLIDE_03_TITLE').col-sm-2.control-label.text-right
                        .col-sm-9
                          input(type="text",
                          placeholder="{{'OBJ_SLIDE_03_TITLE_PLACEHOLDER' | translate}}",
                          data-ng-model='ctrl.formData.langContent[lang.lang][0].slide_03_title'
                          ).form-control#slide_03_title

                      .form-group.clearfix
                        label(for='slide_03_text', translate='LBL_SLIDE_03_TEXT').col-sm-2.control-label.text-right
                        .col-sm-9
                          textarea(type="text",
                          placeholder="{{'OBJ_SLIDE_03_TEXT_PLACEHOLDER' | translate}}",
                          data-ng-model='ctrl.formData.langContent[lang.lang][0].slide_03_text'
                          ).form-control#slide_03_text




                .form-group.clearfix
                  .col-lg-7.col-lg-offset-2.col-md-offset-1.col-sm-offset-1
                    button(type='submit',
                    translate='BTN_ADMIN_CREATE',
                    data-ng-disabled="!(ctrl.uploader.getNotUploadedItems().length == 3)"
                    ).btn.btn-success.btn-lg.btn-margin
                    button(data-ng-click='ctrl.clear()',
                    translate='BTN_CLR'
                    ).btn.btn-warning.btn-lg.btn-margin

  toaster-container(data-toaster-options="{'toaster-id': '111111'}")




