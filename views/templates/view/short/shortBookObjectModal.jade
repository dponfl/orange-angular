div(tabindex="-1",
role="dialog",
data-ng-controller='ShortPanelCtrl as spc').modal.book-object-modal
  .modal-dialog
    .modal-content
      form(novalidate='novalidate',
      data-ng-submit='spc.book()').form-horisontal

        .modal-header
          button(data-ng-click="$hide()").close &times;
          h2(translate='SHORTTERM_PAGE_BOOK_OBJECT_MODAL_HEADER').modal-title

        .modal-body
          div {{spc.formData.objNumber}}

          .form-group.clearfix
            label(for='objectNumber', translate='LBL_OBJ').col-sm-4.control-label.text-right
            .col-sm-8
              input(name='objectNumber',
              data-ng-model='spc.formData.objNumber').form-control#objectNumber


          .form-group.clearfix
            label(for='objectType', translate='LBL_OBJ').col-sm-4.control-label.text-right
            .col-sm-8
              select(name='objectType',
              data-ng-options='option.val for option in $ctrl.objList track by option.key',
              data-ng-model='$ctrl.formData.obj').form-control#objectType

          .form-group.clearfix
            label(for='city', translate='LBL_CITY').col-sm-4.control-label.text-right
            .col-sm-8
              select(name='city',
              data-ng-options='option.val for option in $ctrl.cityList track by option.key',
              data-ng-model='$ctrl.formData.city').form-control#city

          .form-group.clearfix
            label(for='rooms', translate='LBL_ROOM').col-sm-4.control-label.text-right
            .col-sm-8
              select(name='rooms',
              data-ng-options='option.val for option in $ctrl.roomList track by option.key',
              data-ng-model='$ctrl.formData.room').form-control#rooms

          .form-group.clearfix
            label(for='objectNumber', translate='LBL_OBJ_NUM').col-sm-4.control-label.text-right
            .col-sm-8
              input(type="text",
              data-ng-pattern='/^[A-Za-z0-9_]{1,15}$/',
              data-ng-minLength='5',
              data-ng-minLength-err-type='tooShort',
              data-ng-required-err-type="{{'AV_REQ' | translate}}",
              placeholder="{{'OBJ_NUM_PLACEHOLDER' | translate}}",
              data-ng-model='$ctrl.formData.objnumber').form-control#objectNumber

        .modal-footer
          .form-group.clearfix
            button(type='submit',
            ladda='$ctrl.busyFind').btn.btn-success.btn-lg.btn-margin {{'BTN_FIND' | translate}}
            button(data-ng-click='$ctrl.clear()',
            ladda='$ctrl.busyClear').btn.btn-warning.btn-lg.btn-margin {{'BTN_CLR' | translate}}
            button(type='button',
            data-ng-click='$hide()',
            translate='SHORTTERM_PAGE_MODAL_FOOTER_CLOSE_BUTTON').btn.btn-default.btn-lg.btn-margin