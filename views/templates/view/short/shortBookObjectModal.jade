div(tabindex="-1",
role="dialog").modal.book-object-modal
  .modal-dialog
    .modal-content
      form(novalidate='novalidate',
      data-ng-submit='spc.book()').form-horisontal

        fieldset(data-ng-attr-disabled='{{spc.busyBook || undefined}}')

          .modal-header
            button(data-ng-click="$hide()").close &times;
            h2(translate='SHORTTERM_PAGE_BOOK_OBJECT_MODAL_HEADER').modal-title

          .modal-body
            .form-group.clearfix
              label(for='objectInfo', translate='LBL_FIELD_OBJ').col-sm-4.control-label.text-right
              .col-sm-8
                p(data-ng-bind='spc.objectInfo').form-control-static.form-control-static-text#objectInfo

            .form-group.clearfix
              label(for='dateStart', translate='LBL_FIELD_DATE_START').col-sm-4.control-label.text-right
              .col-sm-3
                input(type="text",
                required,
                data-ng-required-err-type="{{'AV_REQ' | translate}}",
                data-ng-model='spc.formData.period_start',
                data-max-date='{{spc.formData.pariod_end}}',
                data-min-date='{{spc.startDate}}',
                bs-datepicker).form-control#dateStart

            .form-group.clearfix
              label(for='dateEnd', translate='LBL_FIELD_DATE_END').col-sm-4.control-label.text-right
              .col-sm-3
                input(type="text",
                required,
                data-ng-required-err-type="{{'AV_REQ' | translate}}",
                data-ng-model='spc.formData.pariod_end',
                data-min-date='{{(spc.formData.period_start ? spc.formData.period_start : spc.startDate)}}',
                bs-datepicker).form-control#dateEnd


            .form-group.clearfix
              label(for='clientName', translate='LBL_FIELD_NAME').col-sm-4.control-label.text-right
              .col-sm-8
                input(type="text",
                data-ng-pattern="/^[a-zA-Zа-яА-Яα-ωΑ-Ω\\s\\-\\.\\']+$/",
                data-ng-required-err-type="{{'AV_REQ' | translate}}",
                data-ng-pattern-err-type="{{'FIELD_NAME_ERR' | translate}}",
                required,
                data-ng-model='spc.formData.name').form-control#clientName

            .form-group.clearfix
              label(for='clientEmail', translate='LBL_FIELD_EMAIL').col-sm-4.control-label.text-right
              .col-sm-8
                input(type="text",
                data-ng-pattern='/^([0-9a-zA-Z\\.]([\\.\\-\\+\\w])*@([0-9a-zA-Z][-\\w]*[0-9a-zA-Z]*\\.)+[a-zA-Z]{2,9})$/',
                data-ng-required-err-type="{{'AV_REQ' | translate}}",
                data-ng-pattern-err-type="{{'FIELD_EMAIL_ERR' | translate}}",
                required,
                data-ng-model='spc.formData.email').form-control#clientEmail

            .form-group.clearfix
              label(for='clientPhone', translate='LBL_FIELD_PHONE').col-sm-4.control-label.text-right
              .col-sm-8
                input(type="text",
                data-ng-model='spc.formData.phone').form-control#clientPhone

            .form-group.clearfix
              label(for='clientInfo', translate='LBL_FIELD_ADDINFO').col-sm-4.control-label.text-right
              .col-sm-8
                textarea(type="text",
                rows="5",
                data-ng-model='spc.formData.additionalInfo').form-control#clientInfo

          .modal-footer
            .form-group.clearfix
              button(type='submit',
              translate='BTN_SUBMIT').btn.btn-success.btn-lg.btn-margin
              button(data-ng-click='spc.clear()',
              translate='BTN_CLR').btn.btn-warning.btn-lg.btn-margin
              button(type='button',
              data-ng-click='$hide()',
              translate='SHORTTERM_PAGE_MODAL_FOOTER_CLOSE_BUTTON').btn.btn-default.btn-lg.btn-margin