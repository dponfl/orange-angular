div(tabindex="-1",
role="dialog").modal.book-object-modal
  .modal-dialog
    .modal-content
      form(novalidate='novalidate',
      data-ng-submit='eshortpc.book()').form-horisontal

        fieldset(data-ng-attr-disabled='{{eshortpc.busyBook || undefined}}')

          .modal-header
            button(data-ng-click="$hide()").close &times;
            h2(translate='EXCLUSIVE_PAGE_BOOK_OBJECT_MODAL_HEADER').modal-title

          .modal-body
            .form-group.clearfix
              label(for='objectInfo', translate='LBL_FIELD_OBJ').col-sm-4.control-label.text-right
              .col-sm-8
                p(data-ng-bind='eshortpc.objectInfo').form-control-static.form-control-static-text#objectInfo

            .form-group.clearfix
              label(for='dateStart', translate='LBL_FIELD_DATE_START').col-sm-4.control-label.text-right
              .col-sm-3
                input(type="text",
                required,
                data-ng-required-err-type="{{'AV_REQ' | translate}}",
                data-ng-model='eshortpc.formData.period_start',
                data-max-date='{{eshortpc.formData.pariod_end}}',
                data-min-date='{{eshortpc.startDate}}',
                bs-datepicker).form-control#dateStart

            .form-group.clearfix
              label(for='dateEnd', translate='LBL_FIELD_DATE_END').col-sm-4.control-label.text-right
              .col-sm-3
                input(type="text",
                required,
                data-ng-required-err-type="{{'AV_REQ' | translate}}",
                data-ng-model='eshortpc.formData.pariod_end',
                data-min-date='{{(eshortpc.formData.period_start ? eshortpc.formData.period_start : eshortpc.startDate)}}',
                bs-datepicker).form-control#dateEnd


            .form-group.clearfix
              label(for='clientName', translate='LBL_FIELD_NAME').col-sm-4.control-label.text-right
              .col-sm-8
                input(type="text",
                data-ng-pattern="/^[a-zA-Zа-яА-Яα-ωΑ-Ω\\s\\-\\.\\']+$/",
                data-ng-required-err-type="{{'AV_REQ' | translate}}",
                data-ng-pattern-err-type="{{'FIELD_NAME_ERR' | translate}}",
                required,
                data-ng-model='eshortpc.formData.name').form-control#clientName

            .form-group.clearfix
              label(for='clientEmail', translate='LBL_FIELD_EMAIL').col-sm-4.control-label.text-right
              .col-sm-8
                input(type="text",
                data-ng-pattern='/^([0-9a-zA-Z\\.]([\\.\\-\\+\\w])*@([0-9a-zA-Z][-\\w]*[0-9a-zA-Z]*\\.)+[a-zA-Z]{2,9})$/',
                data-ng-required-err-type="{{'AV_REQ' | translate}}",
                data-ng-pattern-err-type="{{'FIELD_EMAIL_ERR' | translate}}",
                required,
                data-ng-model='eshortpc.formData.email').form-control#clientEmail

            .form-group.clearfix
              label(for='clientPhone', translate='LBL_FIELD_PHONE').col-sm-4.control-label.text-right
              .col-sm-8
                input(type="text",
                data-ng-model='eshortpc.formData.phone').form-control#clientPhone

            .form-group.clearfix
              label(for='clientSkype', translate='LBL_FIELD_SKYPE').col-sm-4.control-label.text-right
              .col-sm-8
                input(type="text",
                data-ng-model='eshortpc.formData.skype').form-control#clientSkype

            .form-group.clearfix
              label(for='clientWhatsapp', translate='LBL_FIELD_WHATSAPP').col-sm-4.control-label.text-right
              .col-sm-8
                input(type="text",
                data-ng-model='eshortpc.formData.whatsapp').form-control#clientWhatsapp

            .form-group.clearfix
              label(for='clientTelegram', translate='LBL_FIELD_TELEGRAM').col-sm-4.control-label.text-right
              .col-sm-8
                input(type="text",
                data-ng-model='eshortpc.formData.telegram').form-control#clientTelegram

            .form-group.clearfix
              label(for='clientViber', translate='LBL_FIELD_VIBER').col-sm-4.control-label.text-right
              .col-sm-8
                input(type="text",
                data-ng-model='eshortpc.formData.viber').form-control#clientViber

            .form-group.clearfix
              label(for='clientInfo', translate='LBL_FIELD_ADDINFO').col-sm-4.control-label.text-right
              .col-sm-8
                textarea(type="text",
                data-ng-model='eshortpc.formData.additionalInfo').form-control#clientInfo

          .modal-footer
            .form-group.clearfix
              button(type='submit',
              translate='BTN_SUBMIT').btn.btn-success.btn-lg.btn-margin
              button(data-ng-click='eshortpc.clear()',
              translate='BTN_CLR').btn.btn-warning.btn-lg.btn-margin
              button(type='button',
              data-ng-click='$hide()',
              translate='EXCLUSIVE_PAGE_MODAL_FOOTER_CLOSE_BUTTON').btn.btn-default.btn-lg.btn-margin