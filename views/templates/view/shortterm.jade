#shortterm
  .row#shorttermCallout
    .cal-12
      .well
        .page-header.page-primary
          h1 {{'SHORTTERM_PAGE_HEADER_TITLE' | translate}}
            small(translate='SHORTTERM_PAGE_HEADER_SUBTITLE')

        .page-body#block-short

          .row#block-short-filter
            .col-sm-6.col-sm-offset-3#shortFilterWrapper
              .panel.panel-info#shortFilter
                .panel-heading
                  h3(translate='PANEL_HEADER')
                div(data-ng-controller='ShortFiltersCtrl as e').panel-body
                  short-filter(obj-list='e.objList',
                  city-list='e.cityList',
                  room-list='e.roomList')

          div(data-ng-controller='ShortCtrl as sc').row
            div(data-ng-repeat='panel in sc.panels')
              panel-short(badge='panel.badge',
              type='panel.type',
              badge-text='panel.badgeText',
              obj-number='panel.objNumber',
              img='panel.img',
              gallery='panel.gallery',
              content='panel.content')