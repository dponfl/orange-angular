              | Здесь представлена недвижимость, которая находится в эксклюзивном управлении компании
              | Orange Holliday villas.

          .row#block-exclusive_filter
            .col-sm-6.col-sm-offset-3#exclusiveFilterWrapper
              .panel.panel-info#exclusiveFilter
                .panel-heading
                  h3 Задайте условия поиска
                .panel-body
                  form.form-horisontal
                    .form-group.clearfix
                      label.col-sm-4.control-label.text-right Тип сделки:
                      .col-sm-8
                        select.form-control#dealType
                          -
                            var dealType = [
                            {val: 1, text: 'Аренда посуточная'},
                            {val: 2, text: 'Аренда долгосрочная'},
                            {val: 3, text: 'Продажа'}
                            ]
                          each elem in dealType
                            option(value="#{elem.val}") #{elem.text}

                    .form-group.clearfix
                      label.col-sm-4.control-label.text-right Тип объекта:
                      .col-sm-8
                        select.form-control#objectType
                          -
                            var objectType = [
                            {val: 1, text: 'Дом'},
                            {val: 2, text: 'Таунхаус'},
                            {val: 3, text: 'Квартира'}
                            ]
                          each elem in objectType
                            option(value="#{elem.val}") #{elem.text}

                    .form-group.clearfix
                      label.col-sm-4.control-label.text-right Город
                      .col-sm-8
                        select.form-control#city
                          -
                            var city = [
                            {val: 1, text: 'Пафос'},
                            {val: 2, text: 'Лимассол'},
                            {val: 3, text: 'Ларнака'},
                            {val: 4, text: 'Айа-Напа'},
                            {val: 5, text: 'Никоссия'}
                            ]
                          each elem in city
                            option(value="#{elem.val}") #{elem.text}

                    .form-group.clearfix
                      label.col-sm-4.control-label.text-right Кол-во комнат:
                      .col-sm-8
                        select.form-control#rooms
                          -
                            var rooms = [
                            {val: 1, text: '1'},
                            {val: 2, text: '2'},
                            {val: 3, text: '3'},
                            {val: 4, text: '4'},
                            {val: 5, text: '5 и более'}
                            ]
                          each elem in rooms
                            option(value="#{elem.val}") #{elem.text}

                    .form-group.clearfix
                      label.col-sm-4.control-label.text-right Номер объекта:
                      .col-sm-8
                        input(type="text", placeholder="№ объекта").form-control#objectNumber

                    .form-group.clearfix
                      .col-lg-7.col-lg-offset-5.col-md-offset-3.col-sm-offset-1
                        button.btn.btn-success.btn-lg.btn-margin Найти
                        button.btn.btn-warning.btn-lg.btn-margin Очистить



