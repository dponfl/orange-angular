.col-sm-12
  .panel.panel-info
    div(data-ng-show='lpc.badge',
    data-ng-class="lpc.type").badge.badge-object
      span.glyphicon.glyphicon-tag {{lpc.badgeText}}
    .panel-heading
      h3 {{'GENERAL_ELEM_OBJ' | translate}}
        | {{lpc.objNumber}}

    .panel.panel-body
      .col-sm-5
        a(href='{{lpc.img.href}}',
        data-lightbox='{{lpc.img.dataLightbox}}',
        data-title='{{lpc.img.dataTitle}}')
          img(data-ng-src='{{lpc.img.src}}').thumbnail.img-main

      .col-sm-7
        .col-sm-12
          form.form-horizontal
            div(data-ng-repeat='elem in lpc.content[0]').form-group.form-group-lg.main-panel
              label.col-sm-3.control-label {{elem.label}}
              .col-sm-9
                div(ng-bind-html="elem.text").form-control-static.form-control-static-text

      .col-sm-12
        .col-sm-12
          form.form-horizontal
            div(data-ng-repeat='elem in lpc.content[1]').form-group.form-group-lg.main-panel
              label.col-sm-2.control-label {{elem.label}}
              .col-sm-10
                div(ng-bind-html="elem.text").form-control-static.form-control-static-text

      .col-sm-12
        h2.text-center {{'GALLERY' | translate}}
        ul.col-sm-10.col-sm-offset-1.list-inline.text-center#gallery-30593
          li(data-ng-repeat='elem in lpc.gallery')
            a(href='{{elem.href}}',
            data-lightbox='{{elem.dataLightbox}}',
            data-title='{{elem.dataTitle}}')
              img(data-ng-src='{{elem.src}}').thumbnail.img-gallery

        a(data-ng-show="lpc.youtubeshow", href='{{lpc.youtube}}', target="_blank", translate='LONGTERM_PAGE_BUTTON_YOUTUBE').col-xs-12.btn.btn-info.btn-lg.btn-margin.center-block

        button(data-ng-click='lpc.showBookObject()' translate='LONGTERM_PAGE_BUTTON_BOOK_OBJECT').col-xs-12.btn.btn-danger.btn-lg.btn-margin.center-block

toaster-container(data-toaster-options="{'toaster-id': {{lpc.objNumber}}}")